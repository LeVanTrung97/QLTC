<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_bill"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <TextView
        android:id="@+id/txt_topic"
        android:text="Sinh hoạt phí"
        android:layout_toRightOf="@id/img_bill"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_time"
        android:text="12/4/2019"
        android:layout_alignParentRight="true"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_name"
        android:text="Tiền nhà"
        android:layout_toRightOf="@id/img_bill"
        android:layout_below="@id/txt_topic"
        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txt_amount"
        android:text="3.000.000"
        android:layout_below="@id/txt_topic"
        android:layout_alignParentRight="true"

        android:textSize="20sp"
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@id/img_bill"
        android:layout_marginTop="8dp"
        android:background="#6b6b6b"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>